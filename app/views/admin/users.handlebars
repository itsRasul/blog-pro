<div class='row justify-content-end mb-20 flex-row'>
  <div class='col-2 d-flex justify-content-end'>

    <div class='dropdown show'>
      <a
        class='btn btn-secondary dropdown-toggle'
        href=''
        role='button'
        id='dropdownMenuLink'
        data-toggle='dropdown'
        aria-haspopup='true'
        aria-expanded='false'
      >
        نقش کاربران
      <a/>

      <div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>
        <a class='dropdown-item' href='/admin/users'>همه</a>
        <a class='dropdown-item' href='/admin/users?typeUsers=0'>کاربران</a>
        <a class='dropdown-item' href='/admin/users?typeUsers=1'>نویسنده</a>
        <a class='dropdown-item' href='/admin/users?typeUsers=2'>ادمین</a>
      </div>
    </div>

  </div>
  <div class='col-4 col-lg-2 d-flex justify-content-end'>
    <a href='/admin/users/create' class='button button-primary'>
      + ایجاد کاربر جدید
    </a>

  </div>

</div>

<div class='col-12 mb-30'>
  <div class='box'>
    <div class='box-head'>
      <h4 class='title'>کاربران
      </h4>
    </div>
    <div class='box-body'>
      <table class='table'>
        <thead class='thead-dark'>
          <tr>
            <th>#</th>
            <th>نام</th>
            <th>ایمیل</th>
            <th>نقش</th>
            <th>تاریخ ایجاد</th>
            <th>عملیات</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>
                {{@index}}
              </td>
              <td>
                {{this.full_name}}
              </td>
              <td>
                {{this.email}}
              </td>
              <td>
                {{this.role_name}}
              </td>
              <td>
                {{this.created_at_readable}}
              </td>
              <td>
                <a href='/admin/users/edit/{{this.id}}' title='ویرایش'><i
                    class='btn fa fa-pencil text-dark'
                  ></i></a>
                <a href='/admin/users/delete/{{this.id}}' title='حذف'><i
                    class='fa fa-times text-danger'
                  ></i></a>

              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <nav aria-label='Page navigation example'>
      <ul class='pagination justify-content-center'>
        {{#if prevPage}}
          <li class='page-item'>
            <a
              class='page-link'
              href='/admin/users?page={{prevPage}}'
              aria-label='Previous'
            >
              <span aria-hidden='true'>&laquo;</span>
              <span class='sr-only'>Previous</span>
            </a>
          </li>
        {{else}}
          <li class='page-item disabled'>
            <a
              class='page-link'
              href='/admin/users?page={{prevPage}}'
              aria-label='Previous'
              aria-disabled='true'
              disabled
            >
              <span aria-hidden='true'>&laquo;</span>
              <span class='sr-only'>Previous</span>
            </a>
          </li>
        {{/if}}

        {{#each countPageArr}}
          {{#ifCond this}}
            <li class='page-item active'><a
                class='page-link'
                href='/admin/users?page={{this}}'
              >{{this}}</a></li>
          {{else}}
            <li class='page-item'><a
                class='page-link'
                href='/admin/users?page={{this}}'
              >{{this}}</a></li>
          {{/ifCond}}

        {{/each}}
        <li class='page-item'>
          <a
            class='page-link'
            href='/admin/users?page={{nextPage}}'
            aria-label='Next'
          >
            <span aria-hidden='true'>&raquo;</span>
            <span class='sr-only'>Next</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>