<div class='row justify-content-between align-items-center mb-10'>

  <!-- Page Heading Start -->
  <div class='col-12 col-lg-auto mb-20'>
    <div class='page-heading'>
      <h3>تنظیمات</h3>
    </div>
  </div><!-- Page Heading End -->

</div><!-- Page Headings End -->
{{#if hasError}}
  {{#each errors}}
    <div class='alert alert-outline-danger' role='alert'>
      <i class='zmdi zmdi-info'></i>
      {{this}}
    </div>
  {{/each}}
{{/if}}
<form action='' method='POST'>
  <div class='row'>
    <!--Form controls Start-->
    <div class='col-12 mb-30'>
      <div class='box'>
        <div class='box-head'>
          <h3 class='title'>شخصی سازی سایت</h3>
        </div>
        <div class='box-body'>
          <div class='row mbn-20 justify-content-start'>

            <!--Form Field-->

            <div class='row'>
              <div class='col-8 mb-15'><input
                  type='text'
                  class='form-control'
                  placeholder='عنوان سایت'
                  name='website_name'
                  value='{{config.website_name}}'
                /></div>
              <div class='w-100'></div>
              <div class='col-8 mb-15'><input
                  type='text'
                  class='form-control'
                  placeholder='تعداد محتوای هر صفحه'
                  name='posts_count'
                  value='{{config.posts_count}}'
                /></div>
              <div class='w-100'></div>
              <div class='col-8 mb-15'>
                <textarea
                  name='website_description'
                  type='text'
                  class='form-control'
                  placeholder='توضیحات وبسایت'
                >{{config.website_description}}
                </textarea>
              </div>
            </div>
            <!--Form Field-->

          </div>
        </div>
      </div>
    </div>
    <!--Form controls End-->

  </div>

  <div class='row'>
    <!--Form controls Start-->
    <div class='col-12 mb-30'>
      <div class='box'>
        <div class='box-head'>
          <h3 class='title'>دیگر تنظیمات</h3>
        </div>
        <div class='box-body row justify-content-start flex-column'>
          <!--Single Select-->

          <div class='form-check mb-15'>
            <input
              class='form-check-input d-inline-block'
              type='checkbox'
              value='1'
              name='do_users_can_comment'
              id='do_users_can_comment_radio'
              {{#isChecked config.do_users_can_comment}}
                checked
              {{/isChecked}}
            />
            <label
              class='form-check-label d-inline-block'
              for='do_users_can_comment_radio'
            >
              کاربران میتوانند دیدگاه ثبت کنند
            </label>
          </div>

          <div class='form-check mb-15'>
            <input
              class='form-check-input d-inline-block'
              type='checkbox'
              value='1'
              id='do_users_can_signin'
              name='do_users_can_signin'
              {{#isChecked config.do_users_can_signin}}
                checked
              {{/isChecked}}
            />
            <label
              class='form-check-label d-inline-block'
              for='do_users_can_signin'
            >
              هر کسی میتواند ثبت نام کند
            </label>
          </div>
          <!--Single Select-->
          <div class='col-12 col-lg-3 mt-30'>
            <button class='button button-primary'>ذخیره سازی</button>
          </div>
        </div>
      </div>
    </div>
    <!--Form controls End-->

  </div>
</form>