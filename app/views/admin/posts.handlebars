<div class='row justify-content-end mb-20'>
  <div class='col-3 d-flex justify-content-end ml-20'>"
    <a href='/admin/posts/create' class='button button-primary'>
      + نوشتن مطلب جدید
    </a>
  </div>
</div>

<div class='col-12 mb-30'>
  <div class='box'>
    <div class='box-head'>
      <h4 class='title'>لیست مطالب</h4>
    </div>
    <div class='box-body'>
      <table class='table'>
        <thead class='thead-dark'>
          <tr>
            <th>#</th>
            <th>عنوان</th>
            <th>نویسنده</th>
            <th>تاریخ ایجاد</th>
            <th>تعداد بازدید</th>
            <th>عملیات</th>
          </tr>
        </thead>
        <tbody>
          {{#each posts}}
            <tr>
              <th>{{@index}}</th>
              <td>{{this.title}}</td>
              <td>{{this.full_name}}</td>
              <td>
                {{this.created_at_readble}}
              </td>
              <td>{{this.views}}</td>
              <td><a
                  href='/admin/posts/edit/{{this.id}}'
                  class='btn fa fa-pencil'
                ></a><a
                  href='/admin/posts/delete/{{this.id}}'
                  class='btn fa fa-times'
                ></a></td>
            </tr>

          {{/each}}
        </tbody>
      </table>

      <nav aria-label='Page navigation example'>
        <ul class='pagination d-flex justify-content-center'>
          {{#if prePage}}
            <li class='page-item'>
              <a
                class='page-link'
                href='/admin/posts/page/{{prePage}}'
                aria-label='Previous'
              >
                <span aria-hidden='true'>&laquo;</span>
                <span class='sr-only'>Previous</span>
              </a>
            </li>
          {{else}}
            <li class='page-item disabled'>
              <a
                class='page-link'
                href='/admin/posts?page={{prePage}}'
                aria-label='Previous'
              >
                <span aria-hidden='true'>&laquo;</span>
                <span class='sr-only'>Previous</span>
              </a>
            </li>
          {{/if}}

          {{#each pageCount}}
            {{#ifCond this}}
              <li class='page-item active'><a
                  class='page-link'
                  href='/admin/posts?page={{this}}'
                >{{this}}</a></li>
            {{else}}
              <li class='page-item'><a
                  class='page-link'
                  href='/admin/posts?page={{this}}'
                >{{this}}</a></li>
            {{/ifCond}}

          {{/each}}
          <li class='page-item'>
            <a
              class='page-link'
              href='/admin/posts?page={{nextPage}}'
              aria-label='Next'
            >
              <span aria-hidden='true'>&raquo;</span>
              <span class='sr-only'>Next</span>
            </a>
          </li>
        </ul>
      </nav>

    </div>
  </div>
</div>