<div class='col-12 mb-30'>
  <div class='box'>
    <div class='box-head'>
      <h4 class='title'>دیدگاه ها</h4>
    </div>
    <div class='box-body'>
      <table class='table'>
        <thead class='thead-dark'>
          <tr>
            <th>نویسنده</th>
            <th>دیدگاه</th>
            <th>به پست</th>
            <th>زمان ارسال</th>
            <th>عملیات</th>
          </tr>
        </thead>
        <tbody>
          {{#each comments}}
            <tr>
              <td class='d-flex justify-content-start align-items-center'>
                <div class='comments--photo-user rounded'>
                  <img src='/assets/images/avatar/avatar-1.jpg' alt='' />
                </div>
                <p>
                  {{this.full_name}}
                </p>
              </td>
              <td>
                {{this.comment}}
              </td>
              <td>{{this.title}}</td>
              <td>{{this.created_at_readable}}</td>
              <td>
                <a href='/admin/comments/{{this.id}}/status/1' title='تایید'><i
                    class='fa fa-check text-success'
                  ></i></a>
                <a href='/admin/comments/{{this.id}}/status/0' title='رد'><i
                    class='fa fa-times text-danger'
                  ></i></a>
                <a href='/admin/comments/delete/{{this.id}}' title='حذف'><i
                    class='fa fa-trash-o text-dark'
                  ></i></a>

              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>